{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="image" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">

    </section>
    <section class="details">
        <h3>Detalhes</h3>
        <div class="item">
            <div>Nome completo</div>
            <div>{{ teacher.name }}</div>
        </div>
        <div class="item">
            <div>Idade</div>
            <div>{{ teacher.age }}</div>
        </div>
        <div class="item">
            <div>Grau de escolaridade</div>
            <div>{{ teacher.education_level }}</div>
        </div>
        <div class="item">
            <div>Tipo de aula</div>
            <div>{{ "Presencial" if teacher.type_of_class == "in_class" else "À distância" }}</div>
        </div>
        <div class="item">
            <div>Acompanhamento</div>
            <div>
                {% for service in teacher.services %}
                    <span>{{ service }}</span>     
                {% endfor %}
            </div>
        </div>
        <div class="item">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>
        <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
    </section>
</div>
{% endblock content %}