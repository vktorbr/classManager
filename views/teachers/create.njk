{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers">
    <section class="image" style="background: url(https://source.unsplash.com/collection/8491653/500x500) no-repeat center center / cover">

    </section>
    <section class="details">
        <h3>Novo professor</h3>
        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input type="url" name="avatar_url" placeholder="http://">
            </div>
        </div>
        <div class="item">
            <div>Nome completo</div>
            <div>
                <input type="text" name="name" placeholder="Nome do Professor">
            </div>
        </div>
        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input type="date" name="birth">
            </div>
        </div>
        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="education_level">
                    <option value="1">Ensino Médio Completo</option>
                    <option value="2">Ensino Superior Completo</option>
                    <option value="3">Mestrado</option>
                    <option value="4">Doutorado</option>
                </select>
            </div>
        </div>
        <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span>
                    <input type="radio" name="type_of_class" value="in_class" checked>Presencial
                </span>
                <span>
                    <input type="radio" name="type_of_class" value="distance_education">À distância
                </span>
            </div>
        </div>
        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input type="text" name="services" placeholder="Separe as áreas por vírgula">   
            </div>
        </div>
        <button type="submit">Salvar</button>
    </section>
</form>
{% endblock content %}
