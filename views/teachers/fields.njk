<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}">
    </div>
</div>
<div class="item">
    <div>Nome completo</div>
    <div>
        <input type="text" name="name" placeholder="Nome do Professor" value="{{ teacher.name }}">
    </div>
</div>
<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ teacher.birth }}">
    </div>
</div>
<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level">
            <option value="1" {% if teacher.education_level == '1' %} selected
            {% endif %}>Ensino Médio Completo</option>
            <option value="2" {% if teacher.education_level == '2' %} selected
            {% endif %}>Ensino Superior Completo</option>
            <option value="3" {% if teacher.education_level == '3' %} selected
            {% endif %}>Mestrado</option>
            <option value="4" {% if teacher.education_level == '4' %} selected
            {% endif %}>Doutorado</option>
        </select>
    </div>
</div>
<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input type="radio" name="type_of_class" value="in_class" {% if teacher.type_of_class == 'in_class' %} checked
            {% endif %} >Presencial
        </span>
        <span>
            <input type="radio" name="type_of_class" value="distance_education" {% if teacher.type_of_class == 'distance_education' %} checked
            {% endif %}>À distância
        </span>
    </div>
</div>
<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="services" placeholder="Separe as áreas por vírgula" value="{{ teacher.services }}">   
    </div>
</div>
<button type="submit">Salvar</button>